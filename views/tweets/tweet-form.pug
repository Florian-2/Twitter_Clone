extends ../layout.pug

block content 
    h1 tweet-form

    section  
        p Profile 
        include ../includes/profile.pug

    section 
        form(action="/tweets/create" method="POST")
            div(class="form-group")
                label(for="")
                textarea(name="content", cols="60", rows="10" placeholder="Quoi de neuf ?")
                
                if errors
                    each error in errors
                        p #{ error }

            div(class="form-group")
                button(type="submit") Tweeter